{% for item in collections.sections %}
  {% if item.data.type === 'edde' %}
    <div id="edde" class="bg-edde-pattern xl:p-40 md:p-16 p-8 py-32">
      <div class="flex flex-col text-center pb-4 xl:pb-16">
        <h2 class="xs:text-md tracking-widest text-purple-650 mt-20">{{ item.data.title }}</h2>
        <div class="flex justify-center items-center flex-row flex-wrap">
          <p class="xs:text-2xl sm:text-4xl font-bold p-2">
            {{item.data.subtitle | safe}}
          </p>
          <img class="xs:max-h-10 sm:max-h-16" src="/img/edde.svg" alt="EDDE Logo">
        </div>
        <div class="text-1 p-4 sm:text-xl sm:px-14 md:px-2">
          {{ item.templateContent | safe }}
        </div>
      </div>

      <div class="grid grid-cols-1 xl:grid xl:grid-cols-3 md:gap-1 md:py-5 gap-y-3">
        {% for item in edde.row1 %}
          <div class="flex flex-row justify-center items-start lg:m-2 pb-8">
            <img src="/img/features/{{ item.icon }}" alt="" class="m-4">
            <div class="sm:w-2/3 xl:w-3/4">
              <h3 class="tracking-wider text-purple-300 font-bold xs:text-xl sm:text-1xl my-2">{{ item.title }}</h3>
              <div class="xs:text-m sm:text-lg mr-4">
                {{ item.content | markdown | safe }}
              </div>
            </div>
          </div>
        {% endfor %}
      </div>

      <div class="grid xs:grid-cols-1 xl:grid xl:grid-cols-2 md:gap-1 md:px-2 gap-y-3">
        {% for item in edde.row2 %}
          <div class="flex flex-row justify-center items-start lg:m-2">
            <img src="/img/features/{{ item.icon }}" alt="" class="m-4">
            <div class="sm:w-2/3 xl:w-3/5">
              <h3 class="tracking-wider text-purple-300 font-bold xs:text-xl sm:text-1xl my-2">{{ item.title }}</h3>
              <div class="xs:text-m sm:text-lg mr-4 pb-8">
                {{ item.content | markdown | safe }}
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  {% endif %}
{% endfor %}