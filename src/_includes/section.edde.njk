{% for item in collections.sections %}
  {% if item.data.type === 'edde' %}
    <div id="edde" class="bg-edde-pattern py-16 px-8">
      {# Title, Subtitle, First P #}
      <div class="grid grid-cols-1 gap-2 text-center lg:px-36">
        <h2 class="tracking-widest text-purple-650 mt-20">{{ item.data.title }}</h2>
        <div class="flex justify-center items-center flex-row flex-wrap">
          <p class="text-2xl font-bold p-2 sm:text-3xl">
            {{item.data.subtitle | safe}}
          </p>
          <img class="max-h-10 sm:max-h-16" src="/img/edde.svg" alt="EDDE Logo">
        </div>
        <p>{{ item.templateContent | safe }}</p>
      </div> 
      {# Loop through first row #}
      <div class="grid grid-cols-1 gap-y-3 md:gap-1 md:py-5 xl:grid xl:grid-cols-3 xl:px-36">
        {% for item in edde.row1 %}
          <div class="flex flex-row justify-center items-start lg:m-2 ">
            <img src="/img/features/{{ item.icon }}" alt="" class="m-4">
            <div class="sm:w-2/3 xl:w-3/4">
              <h3 class="tracking-wider text-purple-300 font-bold text-xl sm:text-1xl my-2">{{ item.title }}</h3>
              <div class="xs:text-m sm:text-lg mr-4">
                {{ item.content | markdown | safe }}
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
      {# Loop through second row #}
      <div class="grid grid-cols-1 gap-y-3 md:gap-1 md:px-2 xl:px-60 xl:grid-cols-2 ">
        {% for item in edde.row2 %}
          <div class="flex flex-row justify-center items-start lg:m-2">
            <img src="/img/features/{{ item.icon }}" alt="" class="m-4">
            <div class="sm:w-2/3 xl:w-3/5">
              <h3 class="tracking-wider text-purple-300 font-bold text-xl my-2 sm:text-1xl">{{ item.title }}</h3>
              <div class="xs:display-none sm:text-lg mr-4">
                {{ item.content | markdown | safe }}
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  {% endif %}
{% endfor %}