<header x-data="{ mobileMenuOpen : false }" class="flex flex-wrap flex-row justify-between md:items-center md:space-x-4 py-6 px-6 relative">
  <div class="w-full self-start flex flex-row flex-no-wrap justify-between items-center md:w-auto md:self-center md:flex-none">
    {# GS Logo #}
    <a href="{{site.baseURL}}" class="no-underline"><img src="/img/logo.svg" alt="Greyshore logo" class="h-14 py-1"></a>
    {# Nav Button #}
    <button 
      @click="mobileMenuOpen = !mobileMenuOpen" 
      class="inline-block md:hidden w-8 h-8 bg-gray-200 text-gray-600 p-1" 
      aria-label="Show Menu">
      <svg fill="white" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 15a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"></path></svg>
    </button>
  </div>
  {# Navigation list items #}
  <nav id="menu" >
    <ul role="menubar" aria-label="Main Menu" class="flex-col absolute top-16 left-0 z-20 font-semibold hidden pt-0 bg-white shadow-md w-full md:top-0 md:relative md:flex md:flex-row md:space-x-6 md:w-auto md:shadow-none md:bg-transparent md:p-0" :class="{ 'flex' : mobileMenuOpen , 'hidden' : !mobileMenuOpen}" @click.away="mobileMenuOpen = false">
    {% for item in site.navigation %}
      <li role="none">
        <a role="menuitem" class="w-full thick focus:border-2 focus:border-white hover:border hover:border-purple-border hover:border-2 md:text-white md:w-auto py-2 md:py-4 md:px-8"
        href="{% if isFront %}{{item.url}}{% else %}{{ site.baseURL }}/{{item.url}}{% endif %}">
          {{item.title}}
        </a>
      </li>  
    {% endfor %}
    </ul>
    
  </nav>
 {# Hero #}
 <div class="flex flex-col text-center justify-center h-52 px-4 md:h-72 lg:h-96">
    <h1 class="text-white tracking-widest text-xl sm:px-40 md:text-3xl lg:text-4xl xl:text-6xl">
      {{site.hero}}
    </h1>
  </div>
</header>
