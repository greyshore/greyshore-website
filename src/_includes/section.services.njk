{% for item in collections.sections %}
  {% if item.data.type === 'services' %}
    <div>
      <div class="grid grid-cols-1 gap-2 text-center lg:px-36">
        <h2 class="tracking-widest font-bold text-purple-650 mt-20">{{ item.data.title }}</h2>
        <p class="font-medium tracking-wider text-center text-gray-850 text-xl xl:text-4xl p-2">
          {{item.data.subtitle | safe}}
        </p>
        <p class="font-light text-black text-lg lg:text-xl px-4">We take a holistic three-step approach when working with our clients to achieve their desired results:</p>
        <p>{{ item.templateContent | safe }}</p>
      </div> 
      </div>
    <ul role="list" class="mt-3 py-0 md:py-12 lg:py-0 lg:px-24 md:px-36 px-8 grid grid-cols-1 lg:grid-cols-3 gap-2 sm:gap-6">
      {% for item in services.cards %}
        <li class="col-span-1 flex flex-col justify-center items-start py-12 px-8 bg-white border border-black-custom rounded-lg my-4 lg:my-20 lg:m-2">
          <img src="/img/{{ item.icon }}" alt="">
          <h2 class="text-gray-850 text-3xl font-semibold">{{ item.title }}</h2>
          <p class="mt-2 text-gray-850 text-lg">{{ item.content }}</p>
        </li>
      {% endfor %}
    </ul>
  {% endif %}
{% endfor %}
        