{% for item in collections.sections %}
  {% if item.data.type === 'features' %}
    <div id="features" class="w-full min-h-screen flex flex-col justify-center items-center py-12 bg-purple-250">
      <div class="self-center text-center w-full sm:w-2/3 xl:w-1/2 px-4 sm:px:0">
        <h2 class="tracking-wide text-purple-650 font-bold mb-4">{{ item.data.title }}</h2>
        <div class="flex">
         <p class="text-5xl font-bold flex text-center">Introducing
         <img src="/img/edde.svg" alt="EDDE Logo"
        class="h-14 py-1">
        </p>
        </div>
       
        <div class=" text-xl mb-6">
          {{ item.templateContent | safe }}
        </div>
      </div>
      <div class="self-center w-full xl:w-4/5 flex flex-col sm:flex-row flex-wrap px-4 xl:px:0">
        {% for item in features %}
          <div class="w-full sm:w-1/2 flex flex-row flex-no-wrap px-4 sm:px-8 py-6 sm:py-12">
            <div class="w-1/3 xl:w-1/4">
              <img src="/img/features/{{ item.icon }}" alt="{{ item.title }}" class="w-16 block sm:mx-auto">
            </div>
            <div class="w-2/3 xl:w-3/4">
              <h3 class="tracking-wide text-purple-300 font-bold text-2xl uppercase mb-2">{{ item.title }}</h3>
              <div class=" text-lg">
                {{ item.content | markdown | safe }}
              </div>
            </div>
          </div>
        {% endfor %}
    </div>
  {% endif %}
{% endfor %}