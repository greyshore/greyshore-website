{% for item in collections.sections %}
  {% if item.data.type === 'about' %}
    <div id="about" class="flex flex-col lg:flex-row bg-white px-8 md:px-12 lg:px-36 xl:px-48 text-center lg:text-left pt-10 pb-0 md:pt-16 lg:pt-32">
        <div class="md:pl:12 md:pr:4 xl:p-12">
          <h2 class="tracking-widest text-purple-650 text-center lg:text-left pb-4">{{item.data.subtitle}}</h2>
          <p class="font-medium tracking-wider text-center lg:text-left text-gray-850 text-2xl xl:text-4xl mb-4">{{ item.data.title }}</p>
        </div>
        <div class="font-light text-black text-base md:text-xl md:pl-10 md:pr-6 xl:pl-28 xl:px-28 py-2 xl:py-20 text-center lg:text-left">
          <p class="py-2 text-lg">{{item.data.paragraph1 | safe}}</p>
          <p class="py-2 text-lg">{{item.data.paragraph2 | safe}}</p>
          <p class="py-2 text-lg">{{item.data.paragraph3 | safe}}</p>
        </div>
    </div>
  {% endif %}
{% endfor %}